generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// USER (core identity)
// =========================

model User {
  id         String   @id
  createdAt  DateTime @default(now())
  lastSeenAt DateTime?

  email      String?  @unique

  isPro      Boolean  @default(false)
  proSince   DateTime?

  stripeCustomerId      String? @unique
  stripePaymentIntentId String? @unique

  ingredients    Ingredient[]
  recipes        SavedRecipe[]
  usage          UsageEvent[]
  partyPlans     PartyPlan[]
  analytics      AnalyticsEvent[]
  supportTickets SupportTicket[]

  @@index([isPro])
}

// =========================
// EMAIL LOGIN TOKENS
// =========================

model LoginToken {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  email     String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  ip        String?
  ua        String?

  @@index([email])
  @@index([expiresAt])
}

// =========================
// USER DATA
// =========================

model Ingredient {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Ownership: Logged-in users store rows under userId Anonymous users store rows under guestId (cookie-based) Exactly one of these should be set for a row.
  userId  String?
  user    User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  guestId String?

  name    String
  type    String

  // Lookup speed
  @@index([userId])
  @@index([guestId])

  // Optional dedupe: Prevent duplicates per owner. Note: Postgres allows multiple NULLs, so these won't block "ownerless" rows, but your code never creates ownerless rows anyway.
  @@unique([userId, name, type])
  @@unique([guestId, name, type])
}

model SavedRecipe {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name       String
  notes      String?
  recipeJson String

  @@index([userId])
}

model PartyPlan {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title      String
  guestCount Int
  vibe       String
  planJson   String

  @@index([userId])
}

model UsageEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  key       String
  count     Int      @default(0)

  @@unique([userId, key])
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  event     String
  metaJson  String?

  @@index([userId])
  @@index([event])
  @@index([createdAt])
}

// =========================
// STRIPE WEBHOOK DEDUPE
// =========================

model StripeEvent {
  id          String    @id
  type        String
  receivedAt  DateTime  @default(now())
  processedAt DateTime?
  error       String?

  @@index([receivedAt])
  @@index([processedAt])
  @@index([type])
}

// =========================
// Email Server
// =========================

enum SupportTicketStatus {
  OPEN
  CLOSED
}

model SupportTicket {
  id           String              @id @default(cuid())
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  status       SupportTicketStatus @default(OPEN)

  // If the user is logged in, we link it. Guest submissions keep this null.
  userId       String?
  user         User?               @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Form fields
  name         String
  email        String
  message      String

  // Email delivery tracking (free + useful for debugging)
  emailSentAt  DateTime?
  emailError   String?

  @@index([createdAt])
  @@index([status])
  @@index([userId])
  @@index([email])
}